<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="zikr"
            type="com.misbahah.data.model.Zikr" />

        <variable
            name="thekrDetailsFragment"
            type="com.misbahah.azkardetails.item.AzkarDetailsViewPagerItemFragment" />

        <variable
            name="model"
            type="com.misbahah.azkardetails.item.AzkarDetailsViewPagerItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/zikrNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="@{zikr.name}"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_30ssp"
                tools:text="أستغفر الله وأتوب إليه" />

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:onClick="@{() -> thekrDetailsFragment.incrementCounterByOne()}">

            <TextView
                android:id="@+id/repeatingNumber"
                repeatingNumber="@{zikr.repeatingNumber}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="مرات تكرار الذكر: 5" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                repeatingNumber="@{zikr.repeatingNumber}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                app:cpb_progressbar_color="?attr/colorPrimary"
                app:cpb_progressbar_width="@dimen/_7sdp"
                app:cpb_round_border="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repeatingNumber" />


            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{String.valueOf(model.currentTime.intValue())}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/_35ssp"
                android:textStyle="bold"
                tools:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repeatingNumber" />

<!--            <Button-->
<!--                android:id="@+id/increaseTextSize"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:onClick="@{() -> thekrDetailsFragment.incrementCounterByOne()}"-->
<!--                android:text="@string/plus_one"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent" />-->

<!--            <Button-->
<!--                android:id="@+id/decreaseTextSize"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:onClick="@{() -> thekrDetailsFragment.decrementCounterByOne()}"-->
<!--                android:text="@string/minus_one"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>