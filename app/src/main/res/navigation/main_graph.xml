<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/thekrDetailsFragment"
        android:name="com.misbahah.zikrdetails.ui.ZikrDetailsFragment"
        android:label="thekr_details_fragment"
        tools:layout="@layout/thekr_details_fragment">
        <argument
            android:name="thekr"
            app:argType="com.misbahah.data.model.Zikr" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:label="fragment_categories"
        android:name="com.misbahah.categories.ui.CategoriesFragment"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoriesFragment_to_azkarListFragment"
            app:destination="@id/azkarListFragment" />
    </fragment>
    <fragment
        android:id="@+id/azkarListFragment"
        android:name="com.misbahah.azkarlist.AzkarListFragment"
        android:label="fragment_azkar_list"
        tools:layout="@layout/fragment_azkar_list" >
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
</navigation>